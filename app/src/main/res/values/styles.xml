<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="songTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/songTitleTextSize</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/songTitleTopAndBottomMargin</item>
        <item name="android:layout_marginBottom">@dimen/songTitleTopAndBottomMargin</item>
        <item name="android:layout_marginLeft">@dimen/songTitleLeftMargin</item>
        <item name="android:layout_marginStart">@dimen/songTitleLeftMargin</item>
    </style>

    <style name="yearTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/yearTextSize</item>
        <item name="android:layout_marginBottom">@dimen/yearBottomMargin</item>
        <item name="android:layout_marginLeft">@dimen/yearLeftMargin</item>
        <item name="android:layout_marginStart">@dimen/yearLeftMargin</item>
        <item name="android:layout_below">@id/song_title</item>
    </style>

    <style name="albumTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/albumTextSize</item>
        <item name="android:layout_marginLeft">@dimen/albumLeftMargin</item>
        <item name="android:layout_marginStart">@dimen/albumLeftMargin</item>
        <item name="android:layout_below">@id/song_title</item>
        <item name="android:layout_toRightOf">@id/year_release</item>
        <item name="android:layout_toEndOf">@id/year_release</item>
    </style>

    <style name="lengthTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lengthTextSize</item>
        <item name="android:layout_below">@id/play_icon</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/lengthRightMargin</item>
        <item name="android:layout_marginTop">@dimen/lengthTopMargin</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/lengthRightMargin</item>
    </style>

    <style name="iconImageView">
        <item name="android:layout_width">@dimen/iconImageViewWidthAndHeight</item>
        <item name="android:layout_height">@dimen/iconImageViewWidthAndHeight</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/iconRightMargin</item>
        <item name="android:layout_marginTop">@dimen/iconTopMargin</item>
        <item name="android:layout_marginEnd">@dimen/iconRightMargin</item>
    </style>

</resources>
